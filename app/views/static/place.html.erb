<div class="ui grid">
    <div id="sidebar" class="four wide column"><!--Sidebar-->
        <div class="ui grid">
            <div class="sixteen wide center aligned column">
                <div id='picture' class="ui small rounded image">
                    <img src="https://s3-us-west-2.amazonaws.com/feedbee/EHdy1GyV.png">
                </div>
            </div>
        </div>
    </div><!--Sidebar-->

    <div id="right-section" class="twelve wide column">
        <div class="ui centered grid">
            <div class="sixteen wide column"><!--Search-->
                <div id="page-search" class="ui grid">
                    <div class="seven wide column">
                        <div class="ui fluid action input">
                          <input type="text" placeholder="Search for something else...">
                            <div class="ui button">Go</div>
                        </div>
                    </div>
                </div>
            </div><!--Search-->
            <div class="ten wide column"><!--New Comment -->
                <div id='new-comment' class="ui fluid left icon input">
                    <input type="text" placeholder="Add a new comment">
                    <i class="plus icon"></i>
                    <div class="ui button">Submit</div>
                </div>
            </div><!--New Comment -->
            <div id="comments-container" class="sixteen wide column"><!--container-->
                <div id="shadow-container" class="ui segment">
                    <div id="scroll" class="ui centered grid">
                        <% 15.times do %>
                        <%= render "comments/standard" %>
                        <% end %>
                    </div>
                </div>
            </div><!--container-->
        </div><!-- Grid -->
    </div><!--Right Section -->
</div>
