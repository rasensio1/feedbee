<div class="ui grid">
    <div id="sidebar" class="four wide column"><!--Sidebar-->
        <div id="sidebar-grid" class="ui grid">
            <div class="sixteen wide center aligned column"><!--Picture-->
                <div id='picture' class="ui small rounded image">
                  <img src="https://s3-us-west-2.amazonaws.com/feedbee/EHdy1GyV.png">
                </div>
            </div><!--Picture-->

            <div class="sixteen wide center aligned column">
              <h3 id="side-title">Turing School of Software and Design</h3>
            </div>

            <div class="eight wide left aligned column">
              <h3>1510 Blake St.</h3>
            </div>

            <div class="eight wide left aligned column">
